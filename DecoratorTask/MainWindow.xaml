<Window x:Class="DecoratorTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DecoratorTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Background="LightSlateGray" Width="200" Height="400" HorizontalAlignment="Left" Name="CheckBoxesGB">
            <StackPanel Name="CheckBoxesSP">
                <CheckBox Content="Telegram" FontSize="20"></CheckBox>
                <CheckBox Content="Twitter" FontSize="20"></CheckBox>
                <CheckBox Content="Instagram" FontSize="20"></CheckBox>
            </StackPanel>
        </GroupBox>
        <Button Width="200" Height="50" Content="Send Notification" VerticalAlignment="Bottom" Click="Button_Click"></Button>
        <StackPanel Background="Bisque" HorizontalAlignment="Right" VerticalAlignment="Top" Width="500" Height="350" Name="NotificationsSP">  
             
        </StackPanel>
    </Grid>
</Window>
